<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_chapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/long_card_margin_vertical"
    android:layout_marginBottom="@dimen/long_card_margin_vertical"
    android:background="@color/cardview_light_background"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardMaxElevation="@dimen/card_elevation_picked_up">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/card_chapter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_text_padding_horizontal"
            android:paddingRight="@dimen/card_text_padding_horizontal"
            android:paddingTop="@dimen/card_title_padding_vertical"
            android:textSize="@dimen/card_title_text_size"/>

        <TextView
            android:id="@+id/card_chapter_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_text_padding_horizontal"
            android:paddingRight="@dimen/card_text_padding_horizontal"
            android:paddingTop="@dimen/card_subtitle2_padding_vertical"
            android:textSize="@dimen/card_subtitle2_text_size"/>
    </LinearLayout>

</android.support.v7.widget.CardView>