<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context="rs.lukaj.android.stories.ui.StoryActivity">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_text"
        app:layout_constraintGuide_percent="0.22"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_text"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_text"
        app:layout_constraintGuide_percent="0.55"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_text"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_answers"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_answers"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline_answers"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_answers"
        app:layout_constraintGuide_percent="1"
        android:orientation="horizontal"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_character"
        app:layout_constraintGuide_percent="0.22"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_character"
        app:layout_constraintGuide_percent="0.55"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_character"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline_countdown"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_countdown"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_countdown"
        app:layout_constraintGuide_percent="0.22"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline_image"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline_image"
        app:layout_constraintGuide_percent="0.55"
        android:orientation="horizontal"/>


    <ImageView
        android:id="@+id/story_editor_avatar"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline_image"
        app:layout_constraintRight_toLeftOf="@id/right_guideline_image"
        />
    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/story_character_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/left_guideline_character"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline_character"
        app:layout_constraintRight_toLeftOf="@id/right_guideline_character"
        android:layout_marginRight="@dimen/character_margin_end"
        android:layout_marginBottom="@dimen/character_margin_bottom"
        android:textSize="@dimen/story_character_text_size"
        />
    <TextView
        android:id="@+id/story_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/left_guideline_text"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline_text"
        app:layout_constraintRight_toLeftOf="@+id/right_guideline_text"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline_text"
        android:background="#ffffff"
        android:text="@string/dummy_content"
        android:textColor="#3311aa"
        android:textSize="@dimen/story_main_text_size"/>

    <ScrollView
        android:id="@+id/story_answers_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/top_guideline_answers"
        app:layout_constraintRight_toLeftOf="@id/right_guideline_answers"
        app:layout_constraintLeft_toRightOf="@id/left_guideline_answers"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_answers">
        <LinearLayout
            android:id="@+id/story_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/right_guideline_countdown"
        app:layout_constraintLeft_toRightOf="@id/left_guideline_countdown"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline_countdown"
        android:layout_marginTop="@dimen/countdown_vertical_margin"
        android:layout_marginBottom="@dimen/countdown_vertical_margin"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>
